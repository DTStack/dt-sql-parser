{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "allowJs":true,
        "target": "es6",
        "module": "ESNext",
        "moduleResolution": "node",
        "declaration": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "paths": {
            "antlr4": [
                "node_modules/antlr4/dist/antlr4.web.js"
            ]
        },
        "types": [
            "node",
            "jest",
            "antlr4"
        ],
        "typeRoots": [
            "node",
            "node_modules/@types",
            "./src/typings",
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "typeAcquisition": {
        "include": [
            "jest"
        ]
    }
}