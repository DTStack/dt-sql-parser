{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": false,
        "allowJs":true,
        "target": "es6",
        "module": "ESNext",
        "moduleResolution": "node",
        "declaration": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "node",
            "node_modules/@types",
            "./src/typings"
        ]
    },
    "isolatedModules": true,
    "include": [
        "./src/**/*"
    ],
    "typeAcquisition": {
        "include": [
            "jest"
        ]
    }
}