{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": false,
        "allowJs": true,
        "target": "es6",
        "module": "ESNext",
        "moduleResolution": "node",
        "declaration": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["ESNext", "DOM"],
        "skipLibCheck": true,
        "types": ["node", "jest"],
        "typeRoots": ["node", "node_modules/@types"]
    },
    "isolatedModules": true,
    "include": ["./src/**/*"],
    "typeAcquisition": {
        "include": ["jest"]
    }
}
